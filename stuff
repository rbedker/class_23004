import random


def import_chars():
    line_list = []
    list_type = ["class_name", "atk",
                 "dfns", "dod", "hp",
                 "intel", "fth", "stgh", "dex"]
    char_list = []

    with open("char_stats.txt", 'r') as f:
        for line in f:
            line = line.replace("\n", "")
            line = line.split()
            for item in line:
                if item.isdigit() == True:
                    line[line.index(item)] = int(item)
            line_list.append(line)

    for characters in line_list:
        dict_char = dict(zip(list_type, characters))
        char_list.insert(-1, dict_char)
    
    return char_list


def pick_characters(classes):
    while len(classes) > 4:
        classes.remove(random.choice(classes))
    
    for dictionary in classes:
        print(dictionary['class_name'])
        
        for character in dictionary['characters']:
            print(character['name'])
        
